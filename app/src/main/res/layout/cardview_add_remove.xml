<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/add_remove_friend_image_View"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/tools"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedSquare"
            />

        <TextView
            android:id="@+id/add_remove_friend_name"
            android:layout_toRightOf="@+id/add_remove_friend_image_View"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="Name"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/accept_btn"
            android:background="#54bf02"
            android:layout_below="@id/add_remove_friend_name"
            android:layout_toRightOf="@+id/add_remove_friend_image_View"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="accept"
            android:textSize="10sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/reject_btn"
            android:background="#b30c33"
            android:layout_below="@id/add_remove_friend_name"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="reject"
            android:textSize="10sp"
            android:textStyle="bold"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>