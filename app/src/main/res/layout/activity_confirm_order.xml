<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmOrderActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_12"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/shipment_details"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="DELIVERY DETAILS"
            android:background="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="30dp">

        </TextView>

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/shipment_name"
        android:hint="Name"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/app_bar_12"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>

    <EditText
        android:id="@+id/shipment_phone"
        android:hint="Phone Number"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_below="@id/shipment_name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>

    <EditText
        android:id="@+id/shipment_address"
        android:hint="Delivery Address"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_below="@id/shipment_phone"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>

    <EditText
        android:id="@+id/shipment_city"
        android:hint="city"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_below="@id/shipment_address"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_order"
       android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttons"
        android:layout_marginLeft="100dp"
        android:layout_centerHorizontal="true"
        android:text="Confirm order"
        android:textStyle="bold"
        ></Button>

</RelativeLayout>