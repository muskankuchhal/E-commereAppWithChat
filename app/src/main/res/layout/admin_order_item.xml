<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardElevation="15dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="15dp"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/admin_shipment_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="User Name"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/admin_shipment_phone"
            android:padding="10dp"
            android:layout_below="@id/admin_shipment_name"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="User phone number"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/admin_shipment_address_city"
            android:padding="10dp"
            android:layout_below="@id/admin_shipment_phone"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Address,city"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/admin_shipment_date_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/admin_shipment_address_city"
            android:text="Date,time"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/get_order_details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Get order details"
            android:layout_below="@+id/admin_shipment_date_time"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons2"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/ship_order"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Order shipped"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttons2"
            android:layout_below="@+id/get_order_details"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>