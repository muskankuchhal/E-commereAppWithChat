<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity"
    android:background="@color/colorPrimary">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_13"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/my_cart"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="MY CART"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginVertical="30dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="30dp">

        </TextView>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/total_price"
        android:layout_below="@+id/app_bar_13"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total price ="
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:visibility="gone"
        />

<RelativeLayout
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/total_price"
    android:layout_above="@+id/contact">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="10dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>

    <TextView
        android:id="@+id/msg1"
        android:background="@drawable/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!!your order is in execution."
        android:textColor="@android:color/white"
        android:layout_below="@+id/rl1"
        android:layout_alignParentEnd="true"
        android:layout_margin="40dp"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact seller for best prices"
        android:layout_above="@+id/place_order"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/buttons"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/buttons"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        />



</RelativeLayout>