<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/tools">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_name"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:background="#80000000"
        android:textColorHint="#CCFFFF"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:hint="Full Name"
        android:textSize="13sp"
        android:textStyle="bold"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_name"
        android:layout_marginTop="15dp"
        android:id="@+id/input_phone_no"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:background="#80000000"
        android:textColorHint="#CCFFFF"
        android:textColor="@android:color/white"
        android:hint="Phone Number"
        android:inputType="number"
        android:textSize="13sp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_password"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:background="#80000000"
        android:layout_below="@+id/input_phone_no"
        android:hint="Password"
        android:textColorHint="#CCFFFF"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_address"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:background="#80000000"
        android:layout_below="@+id/input_password"
        android:hint="Address"
        android:textColorHint="#CCFFFF"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_firm_name"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:layout_below="@+id/input_address"
        android:hint="Firm Name"
        android:background="#80000000"
        android:textColorHint="#CCFFFF"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_gst"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:layout_below="@+id/input_firm_name"
        android:hint="GST Number(optional)"
        android:background="#80000000"
        android:textColorHint="#CCFFFF"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        />
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_email"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:background="#80000000"
        android:textColorHint="#CCFFFF"
        android:textColor="@android:color/white"
        android:layout_below="@+id/input_gst"
        android:hint="E-mail(optional)"
        android:textSize="13sp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/security_question_1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:background="#80000000"
        android:textColorHint="#CCFFFF"
        android:textColor="@android:color/white"
        android:layout_below="@+id/input_email"
        android:hint="What is your favourite sport?"
        android:textSize="13sp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/security_question_2"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:layout_below="@+id/security_question_1"
        android:background="#80000000"
        android:textColorHint="#CCFFFF"
        android:textColor="@android:color/white"
        android:hint="What is your birth place?"
        android:textSize="13sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/security_question_2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="REGISTER"
        android:textColor="@android:color/white"
        />


</RelativeLayout>